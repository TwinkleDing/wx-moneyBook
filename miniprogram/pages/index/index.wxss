/**index.wxss**/
page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  overflow: hidden;
  overflow-y: auto;
  overflow-s: none;
}
.userinfo {
  margin-top: 40rpx;
  height: 140rpx;
  width: 100%;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
}
.userinfo {
  padding-left: 120rpx;
}
.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}
.userinfo-nickname {
  font-size: 32rpx;
  color: #007aff;
  background-color: white;
  background-size: cover;
  text-align: left;
  padding-left: 0;
  margin-left: 10px;
}
.userinfo-nickname-wrapper {
  flex: 1;
}
.calendar{
  height: 100%;
  width: 100vw;
}
.box{

}
.title{
  height: 40px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 40px;
  background-color: #fafafa;
}
.go{
  display: inline-block;
  width: 30px;
  height: 30px;
  border-radius: 50%;
  border: 1px solid #409EFF;
  text-align: center;
  line-height: 30px;
}
.content{
  padding: 0 20px;
}
.content-title{
  height: 40px;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.content-box{
  width: 100%;
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  flex-direction: row;
  flex-wrap: wrap;
}
.content-box-item{
  width: 14.28%;
  text-align: center;
  height: 40px;
  line-height: 40px;
}
.now-day{
  color: #409EFF;
  border-radius: 50%;
  display: inline-block;
  width: 25px;
  height: 25px;
  line-height: 25px;
  border: 1px solid #409EFF;
}
input{
  outline: 1px solid #ac0;
  height: 40px;
  margin: 10px 0;
}
