input{
  height: 80rpx;
  margin: 20rpx 0;
  padding-left: 20rpx;
  border-right: 2rpx solid #409EFF;
  border-bottom: 2rpx solid #409EFF;
  border-radius: 0 0 20rpx 0;
}
.total{
  padding: 6rpx 40rpx;

}
.total-title{

}
.total-money{
  margin-left: 20rpx;
  font-weight: 600;
}
.item{
  padding: 6rpx 40rpx;
}
.item-title{
  font-weight: 400;
}
.item-even{
  color: #409EFF;
  margin-left: 20rpx;
}
.item-money{
  color: #1AAD19;
  margin-left: 20rpx;
}

.box-transition {
  transition: all 0.5s;
}
.ani-box-hide{
  height: 0rpx;
  overflow: auto;
}
.ani-box-show {
  height: 310rpx;
}